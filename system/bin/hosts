while [ 1 ]
do
	echo "OPTIONS"
	echo "--------------------------------"
	echo "'master' for adware+malware"
	echo "'g' for master+gambling"
	echo "'p' for master+porn"
	echo "'s' for master+social"
  echo "'u' for update"
  echo "'d' for disable"
	echo -n "'q' to quit: "
	read input
	if [ "$input" = "master" -o "$input" = "g" -o "$input" = "gp" -o "$input" = "gps" -o "$input" = "gs" -o "$input" = "ps" -o "$input" = "p" -o "$input" = "s" ]
  then
  cd ..
  cd ..
  cd ..
  cd /magisk/.core
  wget --no-check-certificate https://github.com/Zackptg5/ZAdblock/hosts-$input.txt
  cat hosts-$input.txt > hosts
  rm hosts-$input.txt
  elif [ "$input" = "d" ]
  then
  unmount /system/etc/hosts
  elif [ "$input" = "u" ]
  then
  cd ..
  cd ..
  cd ..
  cd /magisk/.core
  wget --no-check-certificate benbaltz.github.io/blob/master/update-info.txt
  cat update-info.txt
  rm update-info.txt
  echo "Would you like to continue?"
	echo "------------------------------------------"
  echo "'y'"
	echo -n "'n' :"
	read input
  if [ "$input" = "y" ]
  then
  cd ..
  cd ..
  cd ..
  cd /magisk/.core
  wget --no-check-certificate ratchetpanda.github.io/hosts-update.txt
  cat hosts-update.txt >> hosts
  rm hosts-update.txt
  elif [ "$input" = "n" ]
  then
  break
  fi
  rm update-info.txt
  elif [ "$input" = "q" ]
  then
  break
  fi
done
  echo "Done!"
